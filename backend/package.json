{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Lambda backend for hotel management application",
  "scripts": {
    "dev": "npm run build && sam local start-api --port 3000 --env-vars env.json --parameter-overrides 'Environment=local HotelName=\"AWS Hotel\"'",
    "dev:watch": "npm run build && sam local start-api --config-env local --docker-network hotel-app-network --port 3000 --warm-containers EAGER",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --ci --collectCoverage --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist node_modules .aws-sam",
    "package": "sam build",
    "deploy": "sam deploy --guided",
    "setup:local": "node scripts/setup-local-dynamodb.js",
    "verify": "node scripts/verify-setup.js"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "aws-sdk-client-mock": "^3.0.1",
    "fast-check": "^4.4.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
