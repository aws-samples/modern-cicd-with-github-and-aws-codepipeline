{
  "name": "hotel-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Modern CI/CD with GitHub and AWS CodePipeline - Serverless Architecture",
  "workspaces": [
    "frontend",
    "backend",
    "infrastructure"
  ],
  "scripts": {
    "install:all": "npm install",
    "start": "npm run setup:local",
    "setup:local": "echo '\nðŸš€ Starting local development environment...\n' && npm run dynamodb:start && npm run dynamodb:setup && echo '\nâœ… DynamoDB setup complete!\n' && npm run dev",
    "dev": "npm run dynamodb:start && npm run dynamodb:setup && npm-run-all --parallel dev:backend dev:frontend:delayed",
    "dev:frontend:delayed": "sleep 5 && npm run dev --workspace=frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dynamodb:start": "echo 'ðŸ“¦ Starting DynamoDB Local...' && docker-compose up -d dynamodb-local && sleep 3",
    "dynamodb:setup": "echo 'ðŸ”§ Setting up DynamoDB tables...' && npm run setup:local --workspace=backend",
    "dynamodb:stop": "docker-compose down",
    "build": "npm-run-all build:frontend build:backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm-run-all test:monorepo test:frontend test:backend",
    "test:monorepo": "npx jest --config jest.config.js",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "lint": "npm-run-all lint:frontend lint:backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "npm-run-all clean:frontend clean:backend",
    "clean:frontend": "npm run clean --workspace=frontend",
    "clean:backend": "npm run clean --workspace=backend"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/selenium-webdriver": "^4.35.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chromedriver": "^143.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "selenium-webdriver": "^4.39.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
